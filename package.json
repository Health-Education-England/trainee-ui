{
  "name": "trainee-ui-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.5.1",
    "@sentry/browser": "^5.16.1",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/yup": "0.29.2",
    "aws-amplify": "^3.0.16",
    "aws-amplify-react": "^3.1.5",
    "axios": "^0.19.0",
    "contentful": "^7.14.4",
    "eslint-plugin-cypress": "^2.11.1",
    "formik": "^2.1.4",
    "mocha": "^5.2.0",
    "moment": "^2.26.0",
    "nhsuk-frontend": "^3.1.0",
    "nhsuk-react-components": "^1.2.3",
    "node-sass": "^4.14.1",
    "react": "^16.12.0",
    "react-axe": "^3.3.0",
    "react-dom": "^16.12.0",
    "react-loading": "^2.0.3",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.0",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.3.0",
    "stylelint": "^13.6.0",
    "typescript": "^3.9.5",
    "yup": "^0.29.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --silent --watchAll=false --coverage --testResultsProcessor jest-sonar-reporter",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .ts,.tsx,.js --fix",
    "stylelint": "stylelint \"src/**/*.scss\" \"src/**/*.css\" --fix",
    "merge": "mochawesome-merge cypress/reports/mochawesome-report/*.json > cypress/reports/output.json",
    "generate_mochawesome_report": "merge cypress/reports/output.json --reportDir ./ --inline",
    "posttest": "npm run merge && npm run generate_mochawesome_report",
    "e2e": "npm run cypress:open --reporter mochawesome || npm run posttest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-mock-store": "^1.0.2",
    "cypress": "^4.7.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest-sonar-reporter": "^2.0.0",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^2.0.1",
    "mochawesome-report-generator": "^4.0.1",
    "prettier": "^2.0.5",
    "stylelint-prettier": "^1.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/src/mock-data/*.{js,jsx,ts,tsx}",
      "!**/src/redux/store/*.{js,jsx,ts,tsx}",
      "!**/src/*.{js,ts}",
      "!**/src/index.tsx",
      "!**/src/redux/reducers/index.ts",
      "**/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ]
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": ".",
    "reportFile": "coverage/sonar-report.xml",
    "indent": 4
  }
}
